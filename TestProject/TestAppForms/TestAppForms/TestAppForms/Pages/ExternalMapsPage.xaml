<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestAppForms.Pages.ExternalMapsPage"
             Title ="External Maps Plugin">
  <ScrollView>
      <StackLayout Spacing="10" Padding="10">
        <Button x:Name="navigateAddress" Text="Navigate to Address"/>
        <Button x:Name="navigateLatLong" Text="Navigate to Lat|Long"/>
        <Label Text=""/>
        <Label Text="About" FontSize="Medium" FontAttributes="Bold" />
        <Label Text="Created by: James Montemagno"  FontSize="Small"/>
        <Label Text="Launch the default map application to an address or lat/long location."  FontSize="Small"/>
        <Label Text="Code:" FontSize="Medium" FontAttributes="Bold" />
        <Label Text="var maps = CrossExternalMaps.Current;"  FontSize="Small"/>
        <Label Text="maps.NavigateTo(string name, double lat, double long);"  FontSize="Small"/>
        <Label Text="maps.NavigateTo(string name, string street, string city, string state, string zip, string country, string countryCode, NavigationType navigationType = NavigationType.Default);"  FontSize="Small"/>
      </StackLayout>
  </ScrollView>
</ContentPage>