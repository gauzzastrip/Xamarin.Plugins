<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestAppForms.Pages.SharePage"
             Title="Share">
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <Button StyleId="Text" Text="Share Text" Clicked="Button_OnClicked"/>
            <Button StyleId="Link" Text="Share Link" Clicked="Button_OnClicked"/>
            <Button StyleId="Browser" Text="Open Browser" Clicked="Button_OnClicked"/>
            <Label Text=""/>
            <Label Text="About" FontSize="Medium" FontAttributes="Bold" />
            <Label Text="Created by: Jakob Gürtl, James Montemagno"  FontSize="Small"/>
            <Label Text="Share text, links, or open the browser"  FontSize="Small"/>
            <Label Text="Code:" FontSize="Medium" FontAttributes="Bold" />
            <Label Text="var share = CrossShare.Current;"  FontSize="Small"/>
            <Label Text="await share.Share(string text, string title = null);"  FontSize="Small"/>
            <Label Text="await share.ShareLink(string url, string message = null, string title = null);"  FontSize="Small"/>
            <Label Text="await share.OpenBrowser(string url);"  FontSize="Small"/>
        </StackLayout>
    </ScrollView>
</ContentPage>