<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestAppForms.Pages.LocalNotificationsPage"
             Title="Local Notifications">

    <StackLayout Padding="20" Spacing="20">
        <Button Text="Display Notification" x:Name="ButtonNotification"/>
        <Button Text="Schedule Notification" x:Name="ButtonSchedule"/>
        <Label Text="About" FontSize="Medium" FontAttributes="Bold" />
        <Label Text="Created by: Ed Snyder, Krystin Stutesman, James Montemagno"  FontSize="Small"/>
        <Label Text="Easily display or schedule system level notifications"  FontSize="Small"/>
        <Label Text="Code:" FontSize="Medium" FontAttributes="Bold" />
        <Label Text="var notifier = CrossLocalNotifications.Current;"  FontSize="Small"/>
        <Label Text="notifier.Show(string title, string message);"  FontSize="Small"/>
        <Label Text="notifier.Show(string title, string message, int id, DateTime time);"  FontSize="Small"/>
    </StackLayout>
</ContentPage>